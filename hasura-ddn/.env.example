# =============================================================================
# LOCAL DEVELOPMENT ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values
# This configuration is for running Hasura DDN locally with Docker

# -----------------------------------------------------------------------------
# Apollo Federation (Optional - only if using Apollo)
# -----------------------------------------------------------------------------
APOLLO_GRAPH_REF="your-graph-name@current"
APOLLO_KEY="service:your-graph-name:your-apollo-key"

# -----------------------------------------------------------------------------
# PostgreSQL Connector - Local Docker
# -----------------------------------------------------------------------------
# Authorization header for the connector (generate with: openssl rand -base64 24)
CLAIMSIGHT_POSTGRES_AUTHORIZATION_HEADER="Bearer YOUR_GENERATED_TOKEN_HERE"

# Local Docker PostgreSQL connection string
CLAIMSIGHT_POSTGRES_CONNECTION_URI="postgresql://claimsight:claimsight_dev@claimsight-postgres:5432/claimsight"

# Connector port for local development
CLAIMSIGHT_POSTGRES_HASURA_CONNECTOR_PORT=4313

# Service token secret (should match authorization header token)
CLAIMSIGHT_POSTGRES_HASURA_SERVICE_TOKEN_SECRET="YOUR_GENERATED_TOKEN_HERE"

# OpenTelemetry settings for local development
CLAIMSIGHT_POSTGRES_OTEL_EXPORTER_OTLP_ENDPOINT="http://local.hasura.dev:4317"
CLAIMSIGHT_POSTGRES_OTEL_SERVICE_NAME="claimsight_postgres"

# Local connector URLs
CLAIMSIGHT_POSTGRES_READ_URL="http://local.hasura.dev:4313"
CLAIMSIGHT_POSTGRES_WRITE_URL="http://local.hasura.dev:4313"

# -----------------------------------------------------------------------------
# Direct PostgreSQL Connection (for local psql access)
# -----------------------------------------------------------------------------
POSTGRESQL_CONNECTION_STRING="postgresql://claimsight:claimsight_dev@localhost:5432/claimsight"

# -----------------------------------------------------------------------------
# PromptQL Configuration
# -----------------------------------------------------------------------------
# Generate with: ddn project init --with-promptql
PROMPTQL_SECRET_KEY="your-promptql-secret-key-here"

# Your OpenAI API key from https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-proj-your-openai-api-key-here"

# -----------------------------------------------------------------------------
# Hasura DDN Personal Access Token (Optional for local dev)
# -----------------------------------------------------------------------------
# Only needed for cloud deployments. For local dev, run: ddn auth login
# HASURA_DDN_PAT="your-personal-access-token-here"
