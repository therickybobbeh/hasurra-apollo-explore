{
  "name": "claimsight",
  "version": "1.0.0",
  "description": "Cross-platform GraphQL learning application with Hasura, Apollo, and PromptQL",
  "private": true,
  "type": "module",
  "scripts": {
    "setup": "node ./scripts/run-plat.js setup",
    "seed": "node ./scripts/run-plat.js seed",
    "hasura:apply": "node ./scripts/run-plat.js hasura",
    "dev": "node ./scripts/run-plat.js dev",
    "action:dev": "tsx watch hasura/actions/handlers/eligibility.mock.ts",
    "client:dev": "cd app/client && npm run dev",
    "subgraph:dev": "cd app/server && npm run dev",
    "gateway:dev": "cd app/gateway && npm run dev",
    "federated:dev": "concurrently -n \"action,subgraph,gateway,client\" -c \"blue,yellow,magenta,green\" \"npm run action:dev\" \"npm run subgraph:dev\" \"npm run gateway:dev\" \"npm run client:dev\"",
    "all:dev": "concurrently -n \"action,client,subgraph\" -c \"blue,green,yellow\" \"npm run action:dev\" \"npm run client:dev\" \"npm run subgraph:dev\"",
    "test:challenges": "vitest run --config tests/vitest.config.ts",
    "test:challenge": "vitest run --config tests/vitest.config.ts --grep",
    "test:progress": "tsx tests/runner.ts"
  },
  "keywords": [
    "graphql",
    "hasura",
    "apollo",
    "promptql",
    "healthcare",
    "claims"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@apollo/client": "^3.8.0",
    "@types/node": "^20.11.0",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.0",
    "graphql": "^16.8.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "cross-fetch": "^4.0.0",
    "pg": "^8.11.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
