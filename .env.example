# PostgreSQL Connection
PGHOST=localhost
PGPORT=5432
PGUSER=claimsight
PGPASSWORD=claimsight_dev
PGDATABASE=claimsight

# Hasura Configuration
# NOTE: Use BASE URL only (without /v1/graphql) - gateway code adds it automatically
# Local Hasura:
HASURA_GRAPHQL_ENDPOINT=http://localhost:8080
HASURA_GRAPHQL_ADMIN_SECRET=claimsight_admin_secret_change_me

# Hasura Cloud (Phase 2 - uncomment and update):
# HASURA_GRAPHQL_ENDPOINT=https://your-project.hasura.app
# HASURA_GRAPHQL_ADMIN_SECRET=your-admin-secret-from-hasura-cloud

# Local Hasura Database (not used with Hasura Cloud)
HASURA_GRAPHQL_DATABASE_URL=postgresql://claimsight:claimsight_dev@localhost:5432/claimsight
HASURA_GRAPHQL_ENABLE_CONSOLE=true
HASURA_GRAPHQL_DEV_MODE=true
HASURA_GRAPHQL_ENABLED_LOG_TYPES=startup,http-log,webhook-log,websocket-log,query-log
HASURA_GRAPHQL_ENABLE_APOLLO_FEDERATION=true

# GraphQL Endpoints (for client)
# Using Federation Gateway by default to demonstrate Apollo Federation
VITE_GRAPHQL_HTTP_URL=http://localhost:4000/graphql
VITE_GRAPHQL_WS_URL=ws://localhost:4000/graphql

# To use Hasura directly (simpler, no federation):
# VITE_GRAPHQL_HTTP_URL=http://localhost:8080/v1/graphql
# VITE_GRAPHQL_WS_URL=ws://localhost:8080/v1/graphql

# Development Role Testing (for Apollo Client dev headers)
VITE_DEV_ROLE=admin
VITE_DEV_MEMBER_ID=
VITE_DEV_PROVIDER_ID=
VITE_HASURA_ADMIN_SECRET=claimsight_admin_secret_change_me

# Pre-defined test users for role switcher (JSON array)
# NOTE: Colons in labels may cause issues with bash scripts. Use after seeding database.
# Format: [{"role":"member","label":"Robert Martinez","memberId":"uuid"},...]
VITE_TEST_USERS=[{"role":"admin","label":"Admin User"},{"role":"member","label":"Member - Robert Martinez","memberId":"02b2b8af-f92f-4227-8683-9bd21a5feb74"},{"role":"member","label":"Member - Daniel Lopez","memberId":"a9235834-0656-41bb-9538-da2b935255a0"},{"role":"provider","label":"Provider - Dr. Smith","providerId":"734f62da-879d-45bb-b07b-8163182ef917"}]

# Hasura Action Handler
ACTION_HANDLER_PORT=3001
ACTION_HANDLER_URL=http://localhost:3001

# Apollo Subgraph (optional federation demo)
SUBGRAPH_PORT=3002
SUBGRAPH_URL=http://localhost:3002/graphql

# Apollo Federation Gateway (combines Hasura + Subgraph)
GATEWAY_PORT=4000
GATEWAY_URL=http://localhost:4000/graphql

# To use federated endpoint instead of Hasura direct:
# VITE_GRAPHQL_HTTP_URL=http://localhost:4000/graphql
# VITE_GRAPHQL_WS_URL=ws://localhost:4000/graphql

# PromptQL Configuration
PROMPTQL_DATABASE_URL=postgresql://claimsight:claimsight_dev@localhost:5432/claimsight
